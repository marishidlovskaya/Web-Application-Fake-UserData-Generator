@{
    ViewData["Title"] = "Home Page";
}
<div class="toolbar-menu">


 <div class="errors-toolbar">
<h3 class="input-errors">Number of errors:</h3>
 <input type="number" name="errors" id="errors" value ="0" class="text" min="0" max="1000" onkeyup="if(parseInt(this.value)>1000){this.value =1000;return false;}" style="width: 70px; height:55%;">
<input type="range" id="errorsSlider" class="vHorizon" value="0.00" min="0.00" max="10" step="0.25" style="background-color:black; width: 60%;">
</div>

<div class="seed-toolbar">
        <h3 style="margin-left: 40px;" class="input-seed">Seed:</h3>
        <input style="margin-left: 40px; width: 70px; height:55%;" type="text" maxlength="2" id="seedvalue" class="text" value="0">
        <input type="button" id="seedvalueRND" style="margin: 0px 0px 5px 0px; " class="btn btn-outline-success" value="Random seed">
</div>

<div>
        <h3 style="margin-left: 40px;" class=" input-seed">Region:</h3>

        <select name="regions" id="regions" style="height:55%; margin-left: 40px;">
            <option value="us">USA</option>
            <option value="es">Spain</option>
            <option value="de">Germany</option>
        </select>
</div>
</div>

    <table id="users" class="display">
        <thead>
            <tr class="headers-display">
                <th style="text-align:center;">Index</th>
                <th style="text-align:center;">UserID</th>
                <th style="text-align:center;">Name</th>
                <th style="text-align:center;">Address</th>
                <th style="text-align:center;">Mobile</th>
            </tr>
        </thead>
    </table>



